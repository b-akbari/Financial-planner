<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Financial planner</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">  
    <link rel='stylesheet' href='../css/main.css'>
</head>


<body>

    <h1>Financial Planner</h1>

    <% if(alerts.validationErrors){%>
        <% alerts.validationErrors.forEach((msg)=> { %>
            <div class='alert alert-danger'> <%= msg.msg %> </div>
        <%})%>
    <%}%>

    <% if(alerts.success){%>
        <% alerts.success.forEach((msg)=> { %>
            <div class='alert alert-success'> <%= msg %> </div>
        <%})%>
    <%}%>

    <% if(alerts.error){%>
        <% alerts.error.forEach((msg)=> { %>
            <div class='alert alert-danger'> <%= msg %> </div>
        <%})%>
    <%}%>

    <nav id=menu>
        <% if(locals.currentUser){%>
            <div class='btn btn-primary' id='welcome' >Welcome <%= locals.currentUser.firstName %>!</div>
       <% } else{ %>
            <div class='btn btn-primary' id='welcome' >Welcome </div>
        <% } %>
        <a href='/' class='btn btn-outline-primary'>home</a>


        <% if(locals.currentUser){%>
            <a href='/portfolio' class='btn btn-outline-primary'>portfolio</a>

            <a href='/auth/logout' class='btn btn-outline-primary'>log out</a>
        <% }%>

        <% if(!locals.currentUser){%>
        <a href='/auth/signup' class='btn btn-outline-primary'>create account</a>
        <a href='/auth/login' class='btn btn-outline-primary'>log in</a>
        <% }%>



    </nav>
    <hr>
    <br>

    <%- body%>

    <hr>
    <br>
    <h1>shared footer</h1>

    
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js"></script>
    <script src='../js/flash.js' ></script>
</body>
</html>