<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Financial planner</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">  
    <link rel='stylesheet' href='/css/main.css'>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Titillium+Web&display=swap" rel="stylesheet">
</head>

<body>

    <div id='head-background'>
        <h2 id='pageHeader'>FINANCE PLANNER</h1>
    </div>
    <% if(alerts.validationErrors){%>
        <% alerts.validationErrors.forEach((msg)=> { %>
            <div class='alert alert-danger'> <%= msg.msg %> </div>
        <%})%>
    <%}%>

    <% if(alerts.success){%>
        <% alerts.success.forEach((msg)=> { %>
            <div class='alert alert-success'> <%= msg %> </div>
        <%})%>
    <%}%>

    <% if(alerts.error){%>
        <% alerts.error.forEach((msg)=> { %>
            <div class='alert alert-danger'> <%= msg %> </div>
        <%})%>
    <%}%>

    <nav id=menu class="container-fluid">
            <a href='/' class='btn btn-outline-primary'>home</a>
        <% if(locals.currentUser){%>
            <a href='/portfolio' class='btn btn-outline-primary'>portfolio</a>

        <% }%>

        <div id='right-nav'>
            <% if(locals.currentUser){%> 
                <span id='welcome' >Welcome <%= locals.currentUser.firstName %>!</span>   
                <a href='/auth/logout' class='btn btn-outline-primary'>log out</a>
            <% }%>
            <% if(!locals.currentUser){%>
                <a href='/auth/signup' class='btn btn-outline-primary'>create account</a>
                <a href='/auth/login' class='btn btn-outline-primary'>log in</a>
            <% }%>
        </div>
    </nav>
    
    <div id="body-wrapper">
        <%- body%>
    </div>

    <hr>
    <br>
    <links class='container-fluid'>
        <a id='linkedin' href='https://www.linkedin.com/in/basheer-akbari/'></a>
        <a id='github' href='https://github.com/b-akbari'></a>
    </links>
    

    <script
    src="https://code.jquery.com/jquery-3.6.0.min.js"
    integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
    crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js"></script>
    <script src='../js/flash.js' ></script>
</body>
</html>