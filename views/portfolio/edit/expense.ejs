<h1>
    Edit Expense
</h1>

<form method="post" action="/portfolio/expense/update?_method=PUT">

    <div class='form-group'>
        <label>Title</label>
        <input class='form-control' type="text" name="title" value="<%=expense.title%>">
    </div>

    <div class='form-group'>Monthly expense</label>
        <input class='form-control' type='number' name="monthlyExpense" value='<%= expense.monthlyExpense %>'>
    </div>


    <div class='form-group'>
        <label>Annual Percent Change</label>
        <input class='form-control' type="number" name="annualPercentChange" value="<%= expense.annualPercentChange %>">
    </div>

    <input type="hidden" name="_id" value="<%= expense._id %>">

    <button type="submit" class='btn btn-primary'>Edit Revenue</button>

</form>