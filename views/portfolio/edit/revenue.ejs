<h1>
    Edit Revenue
</h1>

<form method="post" action="/portfolio/revenue/update?_method=PUT">

    <div class='form-group'>
        <label>Title</label>
        <input class='form-control' type="text" name="title" value="<%=revenue.title%>">
    </div>

    <div class='form-group'>Monthly In Flow</label>
        <input class='form-control' type='number' name="monthlyInFlow" value='<%= revenue.monthlyInFlow %>'>
    </div>


    <div class='form-group'>
        <label>Annual Percent Change</label>
        <input class='form-control' type="number" name="annualPercentChange" value="<%= revenue.annualPercentChange %>">
    </div>

    <input type="hidden" name="_id" value="<%= revenue._id %>">

    <button type="submit" class='btn btn-primary'>Edit Revenue</button>

</form>